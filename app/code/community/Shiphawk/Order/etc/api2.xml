<config>
    <api2>
        <resources>
            <shiphawk_order_comment>
                <group>sales</group>
                <sort_order>100</sort_order>
                <model>shiphawk_order/api2_order_comment</model>
                <title>ShipHawk Order Comment</title>
                <privileges>
                    <admin>
                        <update>1</update>
                    </admin>
                </privileges>
                <attributes translate="comment status created_at">
                    <comment>Comment</comment>
                    <status>Status</status>
                    <notified>Is Customer Notified</notified>
                </attributes>
                <exclude_attributes>
                    <admin>
                        <read>
                            <comment>1</comment>
                            <status>1/</status>
                            <created_at>1</created_at>
                        </read>
                    </admin>
                </exclude_attributes>
                <routes>
                    <route_entity>
                        <route>/shiphawk/order/:id/comment</route>
                        <action_type>entity</action_type>
                    </route_entity>
                </routes>
                <versions>1</versions>
            </shiphawk_order_comment>
        </resources>
    </api2>
</config>
